{
  "manifest_version": 3,
  "name": "どこかにビューン 駅名取得ツール",
  "version": "1.0.0",
  "description": "どこかにビューン対応ページから駅名を取得する拡張機能",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "駅名取得"
  },
  "content_scripts": [
    {
      "matches": ["https://dokokani-eki-net.com/dokokani/candidates","https://dokokani-eki-net.com/dokokani/trial/candidates"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
